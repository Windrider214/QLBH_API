    <script>
        jQuery(document).ready(function ($) {
            getUser();

            $("#logoBrand").load('/Media/PartialLogo');
        });

        var cookieToken = JSON.parse(Common.getCookie("ManagerShop_Cookies"));


        function getUser() {


            $.ajax({
                type: 'POST',
                url: "/User/GetUser",
                data: {},
                success: function (data) {
                    $('#userInfor').html(data);
                },
                error: function (data) {
                    console.log("error:" + JSON.stringify(data));

                }

            });
        }

        function SignOut() {
            var result = confirm("Bạn muốn đăng xuất ?");

            if (result) {

                Common.eraseCookie("ManagerShop_Cookies");
                window.location.replace("http://localhost:61250")

            }
        }
    </script>
