
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="container-fluid">

    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col-5">
                    <p><strong>Từ ngày:</strong> <input type="text" id="datepicker1"></p>
                </div>
                <div class="col-5">
                    <p><strong>Đến ngày:</strong> <input type="text" id="datepicker2"></p>
                </div>
                <div class="col-2">

                </div>
            </div>
        </div>

        <div class="col-6 text-end">
            <div class="d-flex">
                <input class="form-control" type="text" placeholder="Tìm đơn hàng ..." aria-label="Search" id="txtSearch">
                <button class="btn btn-outline-warning" onclick="Search()"><i class="fa fa-search"></i></button>
                <button class="btn btn-outline-success" onclick="getDsDonHang()">Làm mới</button>
            </div>
        </div>
    </div>
</div>


<div id="dsDonHang" width="100%">

</div>

<div class="d-flex justify-content-center">
    <ul id="pagination-demo" class="pagination-x"></ul>
</div>

<script>
    jQuery(document).ready(function ($) {

        $(function () {
            $("#datepicker1").datepicker({
                changeMonth: true,
                changeYear: true
            });
        });

        $(function () {
            $("#datepicker2").datepicker({
                changeMonth: true,
                changeYear: true,
                onSelect: function () {
                    getTotalByDate();
                }
            });
        });

        getDsDonHang();

    })

    var cookieToken = JSON.parse(Common.getCookie("ManagerShop_Cookies"));

    var pageSize = 10;
    var pageIndex = 1;

    //Lấy sản phẩm
    function getDsDonHang() {

        var inputData = {
            maHd: "",
            token: cookieToken.token,
            page: pageIndex,
            pageSize: pageSize
        };

        $.ajax({
            type: 'POST',
            url: "/Order/PartialIndex",
            data: inputData,
            success: function (data) {
                $('#dsDonHang').html(data);
                dataPaging('@ViewBag.TotalRow', function () {
                    getDsDonHang();
                });
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));

            }

        });
    }

    function getTotalByDate() {
        var startDate = $("#datepicker1").val();
        var endDate = $("#datepicker2").val();

        var inputData = {
            Start: moment(startDate).format(),
            End: moment(endDate).format()
        };

           $.ajax({
            type: 'POST',
            url: "/Order/GetTotalByDate",
            data: inputData,
            success: function (data) {
                var result = data.ResponseCode;
                if (result > 0) {
                    getDsDonHangByDate(result);
                }
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));

            }

        });
    }

      function getDsDonHangByDate(totalRow) {
          var startDate = $("#datepicker1").val();
          var endDate = $("#datepicker2").val();

        var inputData = {
            page: pageIndex,
            pageSize: pageSize,
            StartDate: moment(startDate).format(),
            EndDate: moment(endDate).format()
        };

        $.ajax({
            type: 'POST',
            url: "/Order/GetListPagingByDate",
            data: inputData,
            success: function (data) {
                $('#dsDonHang').html(data);
                dataPaging(totalRow, function () {
                    getDsDonHangByDate(totalRow);
                });
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));

            }

        });
      }

    //Phân trang
    function dataPaging(totalRow, callback) {

        var totalPage = Math.ceil(totalRow / pageSize);
        $('#pagination-demo').twbsPagination({
            totalPages: totalPage,
            visiblePages: 5,
            first: "Đầu",
            next: "Tiếp",
            last: "Cuối",
            prev: "Trước",
            onPageClick: function (event, page) {
                pageIndex = page;
                setTimeout(callback, 200);
                $("html").animate(
                    {
                        scrollTop: $("#txtSearch").offset().top
                    },
                    50 //speed
                );
            }
        });
    }

     function Search() {
        var mahd = $("#txtSearch").val();
         mahd = mahd.trim();
        var searchData = {
            maHd: mahd,
            token: cookieToken.token,
            page: pageIndex,
            pageSize: pageSize
        };

        $.ajax({
            type: "POST",
            url: "/Order/PartialIndex",
            data: searchData,
            success: function (data) {
                $("#dsDonHang").html(data);
                dataPaging('@ViewBag.TotalRow', function () {
                    getDsDonHang();
                });
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));

            }
        });
    }
</script>

