     function Search() {
        var mahd = $("#txtSearch").val();
         mahd = mahd.trim();
        var searchData = {
            maHd: mahd,
            token: cookieToken.token,
            page: pageIndex,
            pageSize: pageSize
        };

        $.ajax({
            type: "POST",
            url: "/Order/PartialIndex",
            data: searchData,
            success: function (data) {
                $("#dsDonHang").html(data);
                dataPaging('@ViewBag.TotalRow', function () {
                    getDsDonHang();
                });
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));

            }
        });
    }
