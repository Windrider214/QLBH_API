@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid px-4">
    <br />
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div id="tkDoanhThu"></div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div id="tkDonHang"></div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div id="tkSanPham"></div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div id="tkKhachHang"></div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header fw-bold">
                    <i class="fa fa-area-chart me-1"></i>
                    Lợi nhuận mặt hàng
                </div>
                <div class="card-body"><canvas id="chartLoiNhuan" width="100%" height="40"></canvas></div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header fw-bold">
                    <i class="fa fa-pie-chart me-1"></i>
                    Tỉ lệ bán
                </div>
                <div class="card-body"><canvas id="chartKinhDoanh" width="100%" height="40"></canvas></div>
            </div>
        </div>

    </div>
    <div class="card mb-4">
        <div class="card-header fw-bold">
            <i class="fa fa-bar-chart me-1"></i>
            Doanh thu trong năm :
            <p></p>
            <div class="fw-normal"> <i class="fa fa-calendar"></i> <input type="text" id="datepicker1"></div>

        </div>
        <div class="card-body">
            <div class="card-body"><canvas id="chartDoanhThuThang" width="100%" height="40"></canvas></div>
        </div>
    </div>

<script>
    jQuery(document).ready(function ($) {
        tkLoiNhuan();
        tkKinhDoanh();
        TkDoanhThu();
        TkDonHang();
        TkSanPham();
        TkKhachHang();
 
        $("#datepicker1").datepicker({
            changeMonth: false,
            changeYear: true,
            changeDate: false,
            showButtonPanel: true,
            dateFormat: 'yy',
            viewMode: "years",
            minViewMode: "years",
            onSelect: function () {
                let chartStatus = Chart.getChart("chartDoanhThuThang");
                if (chartStatus != undefined) {
                    chartStatus.destroy();
                }
                var date = $("#datepicker1").val();
                tkDoanhThuThang(date);
            }
        });
        $("#datepicker1").datepicker({ dateFormat: "yy" }).datepicker("setDate", "0");
        tkDoanhThuThang($("#datepicker1").val());

    });

    var cookieToken = JSON.parse(Common.getCookie("ManagerShop_Cookies"));

    function tkLoiNhuan() {

        $.ajax({
            type: 'POST',
            url: "/Home/ThongKeLoiNhuan",
            data: {},
            contextType: "application/json; charset=utf-8",
            success: function (data) {
                //    console.log(JSON.parse(data));
                CreateChart(JSON.parse(data));
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));

            }

        });

        function CreateChart(data) {
            var _data = data;
            var _values = _data.$values;
            var _chartLabels = [];
            var _chartData = [];

            for (i = 0; i < _values.length; i++) {
                _chartLabels.push(_values[i].tenSp);
                _chartData.push(_values[i].loiNhuan);
            }

            var barColor = [
                'rgba(54, 162, 235, 0.5)',

            ];

            new Chart("chartLoiNhuan",
                {
                    type: "line",
                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            label: "Lợi nhuận",
                            fill: true,
                            backgroundColor: barColor,
                            data: _chartData,
                            borderColor: 'rgb(255, 153, 51)',
                            tension: 0.1
                        }]
                    },
                    options: {
                        scales: {
                            x: {
                                grid: {
                                    display: false,
                                },
                            },

                            y: {
                                grid: {
                                    /*display: false,*/
                                    color: 'rgba(217,143,7,0.1)',
                                },
                            },
                        },
                    }
                });
        };
    }

    function tkKinhDoanh() {

        $.ajax({
            type: 'POST',
            url: "/Home/ThongKeKinhDoanh",
            data: {},
            contextType: "application/json; charset=utf-8",
            success: function (data) {
                //    console.log(JSON.parse(data));
                CreateChart(JSON.parse(data));
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));

            }

        });

        function CreateChart(data) {
            var _data = data;
            var _values = _data.$values;
            var _chartLabels = [];
            var _chartData = [];

            for (i = 0; i < _values.length; i++) {
                _chartLabels.push(_values[i].tenSP);
                _chartData.push(_values[i].doanhThu);
            }

            var barColor = [
                'rgb(255, 99, 132)',
                'rgb(255, 159, 64)',
                'rgb(255, 205, 86)',
                'rgb(75, 192, 192)',
                'rgb(54, 162, 235)',
                'rgb(153, 102, 255)',
                'rgb(201, 203, 207)'

            ];

            new Chart("chartKinhDoanh",
                {
                    type: "pie",
                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            label: "Tỉ lệ bán",
                            fill: true,
                            backgroundColor: barColor,
                            data: _chartData,
                            borderColor: 'rgb(1, 159, 1)',
                            tension: 0.1
                        }]
                    },
                    options: {
                        scales: {
                            x: {
                                grid: {
                                    display: false,
                                },
                            },

                            y: {
                                grid: {
                                    /*display: false,*/
                                    color: 'rgba(217,143,7,0.1)',
                                },
                            },
                        },
                    }
                });
        };
    }

    function tkDoanhThuThang(nam) {

        var inputData = {
            Year: nam
        }

        $.ajax({
            type: 'POST',
            url: "/Home/ThongKeDoanhThuThang",
            data: inputData,
            contextType: "application/json; charset=utf-8",
            success: function (data) {
                //    console.log(JSON.parse(data));
                CreateChart(JSON.parse(data));
            },
            error: function (data) {
                console.log("error:" + JSON.stringify(data));

            }

        });

        function CreateChart(data) {
            var _data = data;
            var _values = _data.$values;
            var _chartLabels = [];
            var _chartData = [];

            for (i = 0; i < _values.length; i++) {
                _chartLabels.push("Tháng" + " " + _values[i].thang);
                _chartData.push(_values[i].doanhThu);
            }

            var barColor = [
                'rgba(255, 99, 132, 0.8)',
                'rgba(255, 159, 64, 0.8)',
                'rgba(255, 205, 86, 0.8)',
                'rgba(75, 192, 192, 0.8)',
                'rgba(54, 162, 235, 0.8)',
                'rgba(153, 102, 255, 0.8)',
                'rgba(201, 203, 207, 0.8)'
            ];

            var borColor = [
                'rgb(255, 99, 132)',
                'rgb(255, 159, 64)',
                'rgb(255, 205, 86)',
                'rgb(75, 192, 192)',
                'rgb(54, 162, 235)',
                'rgb(153, 102, 255)',
                'rgb(201, 203, 207)'
            ];

            new Chart("chartDoanhThuThang",
                {
                    type: "bar",
                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            label: "Doanh thu",
                            backgroundColor: barColor,
                            borderColor: borColor,
                            borderWidth: 3,
                            data: _chartData
                        }]
                    }
                });
        };
    }

    function TkDoanhThu() {
                $.ajax({
                    type: 'POST',
                    url: "/Home/ThongKeDoanhThu",
                    data: {},
                    success: function (data) {
                        $("#tkDoanhThu").html(data);
                    },
                    error: function (data) {
                        console.log("error:" + JSON.stringify(data));

                    }

                });
            }

    function TkDonHang() {
                $.ajax({
                    type: 'POST',
                    url: "/Home/ThongKeDonHang",
                    data: {},
                    success: function (data) {
                        $("#tkDonHang").html(data);
                    },
                    error: function (data) {
                        console.log("error:" + JSON.stringify(data));

                    }

                });
            }

    function TkSanPham() {
                $.ajax({
                    type: 'POST',
                    url: "/Home/ThongKeSanPham",
                    data: {},
