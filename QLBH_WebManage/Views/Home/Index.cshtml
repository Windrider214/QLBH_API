                });
            }

    function TkKhachHang() {
                $.ajax({
                    type: 'POST',
                    url: "/Home/ThongKeKhachHang",
                    data: {},
                    success: function (data) {
                        $("#tkKhachHang").html(data);
                    },
                    error: function (data) {
                        console.log("error:" + JSON.stringify(data));

                    }

                });
            }
</script>
