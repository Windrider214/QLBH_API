@model List<QLBH_WebClient.DTO.LOAISP>

@{
    Layout = null;
    string media = System.Configuration.ConfigurationManager.AppSettings["MEDIA_URL"] + "/images/categories/";
}

<div class="site-section site-blocks-2">
    <div class="container">
        <div class="row">
            @{
                if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-md-6 col-lg-4 mb-4 mb-lg-0" data-aos="fade" data-aos-delay="">
                            <a class="block-2-item" href="/SanPham/LoaiSP?MaLoai=@item.maLoai">
                                <figure class="image">
                                    <img src="@media@item.image" alt="" class="img-fluid">
                                </figure>
                                <div class="text">
                                    <span class="text-uppercase font-weight-bold">Bộ sưu tập</span>
                                    <h3 class="font-weight-normal">@item.tenLoaiSp</h3>
                                </div>
                            </a>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>