@model List<QLBH_WebClient.DTO.MEDIUM>

@{
    Layout = null;
    string media = System.Configuration.ConfigurationManager.AppSettings["MEDIA_URL"] + "/images/media/";
    string media_seo = System.Configuration.ConfigurationManager.AppSettings["MEDIA_URL"] + "/images/sanpham/seoIMG/";

}

    <div class="container-fluid">
        <div id="banner">
            @{
                if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="d-flex justify-content-center">
                            <img src="@media@item.image" style="width: 100%;height: 100%" />
                        </div>
                    }
                }
            }
        </div>
    </div>

    <script>
        jQuery(document).ready(function ($) {
            $('#banner').slick({
                slidesToShow: 1,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 3000
            });

        });
    </script>
