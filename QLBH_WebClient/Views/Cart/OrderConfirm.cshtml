
@{
    ViewBag.Title = "OrderConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="/TrangChu/Index">Trang Chủ</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Đặt Hàng</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <span class="icon-check_circle display-3 text-success"></span>
                <h2 class="display-3 text-black">Cảm ơn bạn !</h2>
                <div id="orderNote" class="lead mb-5"></div>
                <p><a href="/SanPham/Index" class="btn btn-sm btn-primary">Quay về .</a></p>
            </div>
        </div>
    </div>
</div>


<script>
    jQuery(document).ready(function ($) {
        setOrderConfirm();
    });

    function setOrderConfirm() {
        console.log(GetCookie('OrderInform'));
        var confirm = GetCookie('OrderInform');
         
        if (confirm != null) {
            var note = confirm.Description;
            $('#orderNote').text(note);
            RemoveCookie('CheckOutCODGHN');
            RemoveCookie('OrderInform');
            RemoveCookie('ShoppingCart');
        }

    }
</script>
